<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPlatformChat.MVVM.Views.LoginView"
             xmlns:vm="clr-namespace:CrossPlatformChat.MVVM.ViewModels"
             Title="Sign in"
             Background="MidnightBlue">
    <ContentPage.BindingContext>
        <vm:LoginVM/>
    </ContentPage.BindingContext>
    <Grid>
        <VerticalStackLayout VerticalOptions="Center" Margin="40">
            <Label Text="Cross Platform Chat" FontSize="40" 
                   VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
                   TextColor="White"
                   FontAttributes="Bold"/>

            <Label Text="With SignalR" FontSize="20" Margin="0,5,0,40"
                   VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
                   TextColor="Coral"/>

            <Frame Padding=" 10,0,10,0" BorderColor="Transparent">
                <Entry Placeholder="Login" ReturnType="Go" TextColor="Black" Text="{Binding LoginInput}"/>
            </Frame>
            <Frame Padding=" 10,0,10,0" BorderColor="Transparent">
                <Entry Placeholder="Password" ReturnType="Go" TextColor="Black" IsPassword="True" Text="{Binding PasswordInput}"/>
            </Frame>

            <Label Text="Forgot password" TextColor="DeepSkyBlue" Margin="100,10,0,10"/>

            <Button Margin="0,10" Text="Sign in" TextColor="White" Background="FireBrick" Command="{Binding LoginCommand}"/>

            <HorizontalStackLayout Margin="0,40,0,0" HorizontalOptions="Center">
                <Label Text="Don't have an account?" TextColor="LightSkyBlue" />
                <Label Text="Register now" TextColor="DeepSkyBlue" Margin="5,0,0,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToRegisterViewCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

            <Label Text="{Binding Test}" TextColor="Gray" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>